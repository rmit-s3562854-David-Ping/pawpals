<header>
  <div class="container">
    <nav class="navbar navbar-default">
      <%= link_to "PawPals", root_path, id: "logo", class: "btn btn-info" %>

      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
  
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li>
              <%= link_to users_path, :class => "btn btn-info" do %>
                <i class="material-icons">room</i><span>Find Nearby</span>
              <% end %>
            </li>
            <li>
              <%= link_to pets_path, :class => "btn btn-info" do %>
                <i class="material-icons">pets</i><span>My Pets</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_pet_path, :class => "btn btn-info" do %>
                <i class="material-icons">description</i><span>New Pet</span>
              <% end %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle btn btn-danger" data-toggle="dropdown"><i class="material-icons">person</i><%= current_user.name %><span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
<!--                <li><%#= link_to "View Profile", current_user %></li>-->
                <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to raw('<i class="material-icons">person</i>Log in'), login_path, class: "btn btn-info nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>